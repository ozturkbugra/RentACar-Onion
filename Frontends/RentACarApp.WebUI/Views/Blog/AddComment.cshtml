@model CreateCommentDto

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Yapın</h3>
    <form method="post" asp-action="AddComment">
        <input type="hidden" asp-for="blogID" value="@Model.blogID"/>
        <input type="hidden" name="authorid" value="@ViewBag.AuthorId" />
        <div class="form-group">
            <label for="name">Name *</label>
            <input type="text" asp-for="name" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="1">Email *</label>
            <input type="text" asp-for="email" class="form-control" id="1">
        </div>
        <div class="form-group">
            <label for="message">Message</label>
            <textarea asp-for="description" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Post Comment" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>
@model ResultCarWithBrandDto
@{
	ViewData["Title"] = "Detail";
	Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section ftco-car-details">
	<div class="container">
	
		@await Component.InvokeAsync("_CarDetailMainCarFeatureComponentPartial", new { values = Model })

		<div class="row">
			<div class="col-md-12 pills">
				<div class="bd-example bd-example-tabs">
					<div class="d-flex justify-content-center">
						<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">

							<li class="nav-item">
								<a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-expanded="true">Özellikler</a>
							</li>
							
							<li class="nav-item">
								<a class="nav-link" id="pills-review-tab" data-toggle="pill" href="#pills-review" role="tab" aria-controls="pills-review" aria-expanded="true">Değerlendirmeler</a>
							</li>
						</ul>
					</div>

					<div class="tab-content" id="pills-tabContent">
						@await Component.InvokeAsync("_CarDetailTabPageCarFeatureComponentPartial", new { id = Model.carID })


						@await Component.InvokeAsync("_CarDetailTabPageCarReviewsComponentPartial", new { id = Model.carID })


						
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
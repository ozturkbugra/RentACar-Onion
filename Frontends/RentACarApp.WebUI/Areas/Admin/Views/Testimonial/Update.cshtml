@model ResultTestimonialDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="card container">
    <div class="card-body">

        <h4 class="card-title">Referans Güncelle</h4>
        <form method="post">

               <input type="hidden" asp-for="testimonialID"/>
                
           
            <div class="form-group">
                <label asp-for="name">Adı</label>
                <input asp-for="name" class="form-control">
            </div>

            <div class="form-group">
                <label asp-for="title">Başlık</label>
                <input asp-for="title" class="form-control">
            </div>


            <div class="form-group">
                <label asp-for="comment">Yorum</label>
                <input asp-for="comment" class="form-control">
            </div>

            <div class="form-group">
                <label asp-for="imageUrl">Resim Url</label>
                <input asp-for="imageUrl" class="form-control">
            </div>


           



            <button type="submit" class="btn btn-warning waves-effect waves-light">Güncelle</button>
        </form>

    </div>
</div>


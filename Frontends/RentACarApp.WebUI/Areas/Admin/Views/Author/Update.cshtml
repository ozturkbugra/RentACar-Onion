@model ResultAuthorDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="card container">
    <div class="card-body">

        <h4 class="card-title">Yazar Güncelle</h4>
        <form method="post">

            <div class="form-group">
                <input type="hidden" asp-for="authorID"/>
                <label asp-for="name">Adı</label>
                <input asp-for="name" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="description">Açıklama</label>
                <input asp-for="description" class="form-control">
            </div>
           
            <div class="form-group">
                <label asp-for="imageUrl">Resim</label>
                <input asp-for="imageUrl" class="form-control">
            </div>
        
           



            <button type="submit" class="btn btn-warning waves-effect waves-light">Güncelle</button>
        </form>

    </div>
</div>


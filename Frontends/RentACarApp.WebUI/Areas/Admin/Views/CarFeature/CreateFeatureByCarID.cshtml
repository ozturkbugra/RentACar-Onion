@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "CreateFeatureByCarID";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Araba Özellik Ekleme</h4>
                <form method="post">
                    @* asp-action="Index" otomatik algılanır *@
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model[i].featureID" />
                            <input type="hidden" asp-for="@Model[i].name" /> @* Adın kaybolmaması için *@
                            <input type="checkbox" class="form-check-input" />
                            <label class="form-check-label">@Model[i].name</label>
                        </div>
                    }
                    <br /> <br /> <br />
                    <button type="submit" class="btn btn-success mt-3">Özellikleri Kaydet</button>
                </form>


            </div>
            <!-- end card-body-->
        </div>

    </div>
</div>



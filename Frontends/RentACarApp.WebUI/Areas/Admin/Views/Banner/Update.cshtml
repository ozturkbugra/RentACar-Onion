@model ResultBannerDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="card container">
    <div class="card-body">

        <h4 class="card-title">Banner Güncelle</h4>
        <form method="post">

            <div class="form-group">
                <input type="hidden" asp-for="bannerID"/>
                <label asp-for="title">Başlık</label>
                <input asp-for="title" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="description">Açıklama</label>
                <input asp-for="description" class="form-control">
            </div>
           
            <div class="form-group">
                <label asp-for="videoDescription">Video Açıklama</label>
                <input asp-for="videoDescription" class="form-control">
            </div>
           
            <div class="form-group">
                <label asp-for="videoUrl">Video Url</label>
                <input asp-for="videoUrl" class="form-control">
            </div>
           



            <button type="submit" class="btn btn-warning waves-effect waves-light">Güncelle</button>
        </form>

    </div>
</div>

